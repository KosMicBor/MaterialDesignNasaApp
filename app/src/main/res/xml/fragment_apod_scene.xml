<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        motion:constraintSetEnd="@layout/fragment_apod"
        motion:constraintSetStart="@layout/fragment_apod_start">

        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:targetId="@id/wiki_button" />
    </Transition>

    <Transition
        motion:constraintSetEnd="@layout/fragment_apod_start"
        motion:constraintSetStart="@layout/fragment_apod">

        <OnSwipe
            motion:dragDirection="dragRight"
            motion:targetId="@id/apod_text_input_edit_text" />

    </Transition>

</MotionScene>
