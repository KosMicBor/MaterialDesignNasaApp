<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nasa_launcher_activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/launcher_activity_padding"
    tools:context=".LaunchActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/nasa_launcher_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/splash_screen_logo_style"
        tools:visibility="visible"
        android:src="@drawable/ic_nasa_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>