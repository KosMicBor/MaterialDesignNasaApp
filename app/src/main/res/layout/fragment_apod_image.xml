<?xml version="1.0" encoding="utf-8"?>

<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/apod_image_shimmer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/apod_fragment_image_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.apod_screen.FragmentApodImage">

        <kosmicbor.giftapp.pictureofthedayapp.utils.EquilateralImageView
            android:id="@+id/apod_main_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/apod_image_margin"
            android:contentDescription="@string/main_pic_description"
            tools:src="@color/ic_launcher_background" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/apod_favorite_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/ic_baseline_favorite_border_24"
            app:layout_anchor="@id/apod_main_image"
            app:layout_anchorGravity="bottom|end" />

        <include layout="@layout/apod_bottom_sheet_layout" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</com.facebook.shimmer.ShimmerFrameLayout>